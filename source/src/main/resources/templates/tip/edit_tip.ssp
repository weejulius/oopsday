<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title>Create or Update a tip</title>
</head>
<style type="text/css">
    * {
        font-size: 100.01%;
    }

    body {
        font: 62.5% sans-serif;
        width: 786px;
        margin: 0 auto;
        background: gray;
        block: none;
    }

    .readonly {
        border: none;
        background: white;
        color: black;
        cursor: default;
        vertical-align: baseline;

    }

    input[disabled="true"] {
        background-color: #808080;

    }

    .textbox {
        font-size: small;
        border: 0;
        text-align: left;

    }

    #container {
        width: 670px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 50px;
        padding: 20px 20px 20px 20px;
        background: white;
    }

    input {
        display: inline-block;
        width: 60%;
    }

    label {
        display: inline-block;
        font-size: medium;
        height: 100%;
        width: 50px;
        text-align: right;
        margin: 0 8px 0 4px;
    }

    textarea#tip_content {
        border: 2px solid #cccccc;
        padding: 5px 5px 5px 5px;
        font-family: Tahoma, sans-serif;
        margin: 20px auto 10px 60px;
        width: 60%;
        height: 180px;
    }

    input#tip_submit {

        clear: left;
        width: 15%;
        margin: 10px auto 5px 60px;
    }

    .textbox div {
        height: 24px;
        display: block;
        text-align: left;
    }
</style>
<body>
<div id="container">
    <% import com.fishstory.oopsday.domain.tip.Tip%>
    <% import com.fishstory.oopsday.interfaces.shared.template.Strings._ %>
    <%@ var _tip_properties:List[String] %>
    <%@ var _title:String=_tip_properties(1) %>
    <form method="POST" action="/tips">
        <fieldset class="textbox">
            <input type="hidden" name="tip_id" value="${_tip_properties(0)}"/>

            <div>
                <label for="tip_title">Title:</label><input name="tip_title" id="tip_title" value="${_title}"/>
            </div>

            <textarea name="tip_content" id="tip_content">${_tip_properties(2)}</textarea>

            <div>
                <input type="submit" id="tip_submit" value="${not_empty_then_return_orelse(_title," modify tip","share
                tip")}"/>
            </div>
        </fieldset>
    </form>
</div>
</body>
</html>