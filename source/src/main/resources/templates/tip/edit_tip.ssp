<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title>Create or Update a tip</title>
</head>
<style type="text/css">
    * {
        font-size: 100.01%;
    }

    body {
        font: 62.5% sans-serif;
        width: 786px;
        margin: 0 auto;
        background: gray;
        block: none;
    }

    .readonly {
        border: none;
        background: white;
        color: black;
        cursor: default;
        vertical-align: baseline;

    }

    input[disabled="true"] {
        background-color: #808080;

    }

    .textbox {
        font-size: small;
        border: 0;
        text-align: left;

    }

    #container {
        width: 670px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 50px;
        padding: 20px 20px 20px 20px;
        background: white;
    }

    input {
        display: inline-block;
        width: 60%;
    }

    label {
        display: inline-block;
        font-size: medium;
        height: 100%;
        width: 50px;
        text-align: right;
        margin: 0 8px 0 4px;
    }

    textarea#tip_content {
        border: 2px solid #cccccc;
        padding: 5px 5px 5px 5px;
        font-family: Tahoma, sans-serif;
        margin: 20px auto 10px 60px;
        width: 60%;
        height: 180px;
    }

    input#tip_submit {

        clear: left;
        width: 15%;
        margin: 10px auto 5px 60px;
    }

    .textbox div {
        height: 24px;
        display: block;
        text-align: left;
    }
</style>
<body>
<div id="container">
    <% import com.fishstory.oopsday.domain.tip.Tip%>
    <% import com.fishstory.oopsday.interfaces.shared.template.Strings._ %>
    <%@ val tip:Tip %>
    <%@ val _title:String=tip.title %>
    <%@ val isNewTip:Boolean=(tip.id<=0)%>
    <%@ val validation_tip_message:Map[String,String]%>
    
    #if(isNewTip)
    <form method="POST" action="/tips/new">
    #else
    <form method="POST" action="/tips/${tip.id}/edit">
    #end
        <fieldset class="textbox">
            <div>
                <label for="tip_title">Title:</label>
                <input name="tip_title" id="tip_title" value="${tip.title}"/>
                #if(validation_tip_message.get("fail_tip_title").isDefined)
                   <span>${validation_tip_message("fail_tip_title")}
                #end   
            </div>

            <textarea name="tip_content" id="tip_content">${tip.content}</textarea>
            #if(validation_tip_message.get("fail_tip_content").isDefined)
              <span>${validation_tip_message("fail_tip_content")}
            #end   
            <div>
                <input type="submit" id="tip_submit" 
                value="${not_empty_then_return_orelse(_title," modify tip","share tip")}"/>
            </div>
        </fieldset>
    </form>
</div>
</body>
</html>