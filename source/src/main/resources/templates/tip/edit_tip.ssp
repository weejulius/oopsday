<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title>Create or Update a tip</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link href="/resources/css/base.css" media="all" rel="stylesheet" type="text/css" />
    <style type="text/css">

    .readonly {
        border: none;
        background: white;
        color: black;
        cursor: default;
        vertical-align: baseline;

    }

    input[disabled="true"] {
        background-color: #808080;

    }

    .textbox {
        font-size: small;
        border: 0;
        text-align: left;

    }

    input {
        display: inline-block;
        width: 60%;
    }


    textarea#tip_content {
        border: 2px solid #cccccc;
        padding: 5px 5px 5px 5px;
        font-family: Tahoma, sans-serif;
        margin: 20px auto 10px 0;
        width: 60%;
        min-height: 180px;
    }
    
    .main{
      margin-top:20px;
    }

    input#tip_submit {

        clear: left;
        width: 15%;
        margin: 5px auto 5px 0;
    }

    .textbox div {
        height: 24px;
        display: block;
        text-align: left;
    }
</style>
</head>

<% import com.fishstory.oopsday.domain.tip.Tip%>
    <% import com.fishstory.oopsday.interfaces.shared.template.Strings._ %>
    <%@ val tip:Tip %>
    <%@ val _title:String=tip.title %>
    <%@ val isNewTip:Boolean=(tip.id<=0)%>
    <%@ val validation_tip_message:Map[String,String]%>
<body>
<div id="container">
<div class="header">
      <ul>
        <li><a href="">首页</a></li>
        <li><a href="">首页</a></li>
        <li><a href="">首页</a></li>
        <li><a href="">首页</a></li>
        <li><a href="">首页</a></li>
        <li><a href="">首页</a></li>
      </ul>
    </div>
    
    <div class="main">
    #if(isNewTip)
    <form method="POST" action="/tips/new">
    #else
    <form method="POST" action="/tips/${tip.id}/edit">
    #end
        <fieldset class="textbox">
            <div>
                <input name="tip_title" id="tip_title" value="${tip.title}"/>
                #if(validation_tip_message.get("tip_title").isDefined)
                   <span>${validation_tip_message("tip_title")}
                #end   
            </div>

            <textarea name="tip_content" class="tip_content" id="tip_content">${tip.content}</textarea>
            #if(validation_tip_message.get("tip_content").isDefined)
              <span>${validation_tip_message("tip_content")}
            #end   
            <div>
                <input type="submit" id="tip_submit" 
                value="${not_empty_then_return_orelse(_title," modify tip","share tip")}"/>
            </div>
        </fieldset>
    </form>
    </div>
</div>
</body>
</html>