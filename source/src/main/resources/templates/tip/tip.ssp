<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<% import com.fishstory.oopsday.domain.tip.Tip%>
<%@ var _tip:Tip %>
<title>Tip : ${_tip.title}</title>
<style type="text/css">
   * { font-size: 100.01%; }
   body { 
	font: 62.5% sans-serif; 
	width: 786px;
	margin:0 auto;
	background:gray;
	}

   dl.tip dt.hidden{
	display: none;
    }

   dl.tip dt{
	float: left;
    }

    dl.tip {
        width: 670px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 50px;
        padding: 20px 20px 20px 20px;
        background:white;
    }

    dl.tip dd {
        margin: 2px 3px 2px 0px;
    }

    dl.tip dt {
        margin-right: 5px;
    }

    dl.tip dd.tip_title {
	    font-size:large;
        font-weight: bold;
		text-transform: capitalize;
    }

    dl.tip dd.tip_content {
	    font-size:medium;
        margin-top: 10px;
        margin-bottom: 20px;
        word-wrap: break-word;
        padding:5px 5px 5px 0px;
    }

</style>
<body>
<div class="main_header"/>
<div class="main_center">
    <dl class="tip">
	    <dt class="hidden">title</dt>
        <dd class="tip_title">
            ${_tip.title}
        </dd>
		<dt class="hidden">content</dt>
        <dd class="tip_content">
            ${_tip.content}
		</dd>
		<dt>created by</dt>
        <dd class="tip_author">
            ${_tip.author}
        </dd>
        <dt>created at</dt>
        <dd>
            ${_tip.created_date}
		</dd>
		#if(_tip.modified_date!=null)
		<dt>modified at</dt>
        <dd>
			${_tip.modified_date}
        </dd>
        #end
	</dl>
</div>
<div class="main_footer"/>
</body>
</html>
