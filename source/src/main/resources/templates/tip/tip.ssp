<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<% import com.fishstory.oopsday.domain.tip.Tip%>
<%@ var _tip:Tip %>
<title>tip: ${_tip.title}</title>
<style type="text/css">
    html {
        font-size: 12px;
        font-weight: 400;
    }

    ul.tip {
        width: 400px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 50px;
        padding: 20px 20px 20px 20px;
        list-style-type: none;
        border: 1px solid gray;
    }

    ul.tip li {
        margin: 2px 3px 2px;
    }

    ul.tip li.tip_title {
        font-weight: bold;
        font-size: 16px;
        text-align: center;
    }

    ul.tip li.tip_content {
        font-size: 14px;
        margin-top: 10px;
        margin-bottom: 20px;
        word-wrap: break-word;
    }

</style>
<body>
<div class="main_header"/>
<div class="main_center">
    <ul class="tip">
        <li class="tip_title">
            ${_tip.title}
        </li>
        <li class="tip_content">
            ${_tip.content}
        </li>
        <li class="tip_author">
            author: ${_tip.author}
        </li>
        <li>
            created: ${_tip.created_date}
        </li>
        <li>
            modified: ${_tip.modified_date}
        </li>
    </ul>
</div>
<div class="main_footer"/>
</body>
</html>
