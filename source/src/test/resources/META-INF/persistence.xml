<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="tip" transaction-type="RESOURCE_LOCAL">
		<class>com.fishstory.oopsday.domain.tip.Tip</class>
		<properties>
			<!-- jdbc connection properties -->
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:file:/tmp/jyu/tip.hsqldb" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
			<!-- hibernate connection properties -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.max_fetch_depth" value="3" />
			<property name="hibernate.jdbc.batch_size" value="50" />
			<!-- hibernate debug properties -->
			<property name="hibernate.generate_statistics" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.show_sql" value="true" />
			<!-- query & object cache properties -->
			<property name="hibernate.bytecode.use_reflection_optimizer"
				value="true" />
			<!-- c3p0 connection pool properties -->
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="100" />
			<property name="hibernate.c3p0.max_size" value="10" />
			<property name="hibernate.c3p0.max_statements" value="0" />
			<property name="hibernate.c3p0.min_size" value="1" />
			<property name="hibernate.c3p0.timeout" value="100" />
		</properties>

	</persistence-unit>
</persistence>
